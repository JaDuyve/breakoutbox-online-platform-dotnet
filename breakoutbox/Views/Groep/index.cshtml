@model Sessie
@{
    ViewData["Title"] = Model.Naam;
}


<p>@ViewData["Title"]</p>
<h2>Groepen</h2>
<table class="table">
    <tr>
        <th>Naam</th>
        <th>Klas</th>
        <th>Contactleer</th>
        <th></th>
    </tr>
    @foreach (var groep in Model.SessieGroep)
    {
        <tr>
            <td>@groep.Groepen.Naam</td>
            <td>@groep.Groepen.Klas</td>
            <td><input type="checkbox" @(groep.Groepen.Contactleer ? "checked" : "") /></td>
            <td><a asp-controller="Groep" asp-action="Start" asp-route-id="@groep.Groepen.Id">Start</a></td>
        </tr>
    }
</table>
<a asp-controller="Sessie" asp-action="Index">Back</a>