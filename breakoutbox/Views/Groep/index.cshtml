@model breakoutbox.Models.Domain.Sessie
@{
    ViewData["Title"] = Model.Naam;
}

<h2>Groepen</h2>
<table class="table">
    <tr>
        <th>Naam</th>
        <th>Klas</th>
        <th>Contactleer</th>
        <th></th>
    </tr>
    @foreach (var groep in Model.Groepen)
    {
        <tr>
            <td>@groep.Naam</td>
            <td>@groep.Klas</td>
            <td><input type="checkbox" @(groep.Contactleer ? "checked" : "") /></td>
            <td><a asp-controller="Groep" asp-action="Start" asp-route-id="@groep.Id">Start</a></td>
        </tr>
    }
</table>
<a asp-controller="Sessie" asp-action="Index">Back</a>