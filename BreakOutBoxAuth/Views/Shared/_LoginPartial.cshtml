@using Microsoft.AspNetCore.Identity
@using BreakOutBoxAuth.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="GroepBeheren" asp-action="Index">Sessiebeheer</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn nav-link">Log out</button>
            </li>
}   
else
{
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
}
