@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

<div class="container">
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div class="logcard mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title mdl-card--expand">
                    <h2 class="mdl-card__title-text">Meld je aan als leerkracht</h2>
                </div>
                <div class="mdl-card__supporting-text">
                    <div class="form-group">
                        <label asp-for="username"></label>
                        <input asp-for="username" class="form-control" />
                        <span asp-validation-for="username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(m => m.RememberMe)

                        <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="switch-2">
                            <input asp-for="RememberMe" type="checkbox" id="switch-2" class="mdl-switch__input">
                            <span class="mdl-switch__label"></span>
                        </label>
                    </div>
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <div class="form-group">
                        <button type="submit" class="mdl-button mdl-js-button mdl-button--colored mdl-js-ripple-effect">Aanmelden</button>
                    </div>
                </div>
           </div>  
        </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
